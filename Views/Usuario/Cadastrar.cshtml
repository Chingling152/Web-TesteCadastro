<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Cadastrar Usuario</title>
    <link rel="stylesheet" href="/CSS/CadastrarUsuario.css"/>
    @{
        Layout = "MasterPageDeslogado";
    }
</head>
<body class="flex-column">    
    <section>
        <h1>Cadastrar Usuario</h1>
        @ViewBag.Mensagem
        <form action = "/Usuario/Cadastrar" method="POST" class="flex-column">
            <label>Nome
                <input type="text" maxlength="50" name = "Nome" placeholder="Ex :JoÃ£o da Silva" required>
            </label>
            <label>Email
                <input type="email" name="Email" placeholder="Ex : joaodasilva@hotmail.com" required>
            </label>
            <label>Senha
                <input type="text" minlength="8" name = "Senha" required placeholder="Ex : A6ef28R4f ">
            </label>
            <label>Data De Nascimento
                <input type="date" name="DataNascimento" required>
            </label>
            <label> Privilegios</label>
            <div id="privilegios">
                <label>
                    <input type="radio" name="Tipo" value="Usuario" checked> Usuario normal
                </label>    
                <label>
                    <input type="radio" name="Tipo" value="Administrador"> Administrador
                </label>
            </div>
            <input id = "btn" type="submit" value="Enviar">
        </form>
    </section>
</body>
</html>